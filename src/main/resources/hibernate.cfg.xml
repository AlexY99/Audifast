<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/AudiFast?serverTimezone=America/Mexico_City&amp;useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;useSSL=false</property>

        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="connection.pool_size">1</property>
        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>
        <!-- Set the current session context -->
        <property name="current_session_context_class">thread</property>
        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">none</property>
        <!-- dbcp connection pool configuration -->
        <property name="hibernate.dbcp.initialSize">5</property>
        <property name="hibernate.dbcp.maxTotal">20</property>
        <property name="hibernate.dbcp.maxIdle">10</property>
        <property name="hibernate.dbcp.minIdle">5</property>
        <property name="hibernate.dbcp.maxWaitMillis">-1</property>
        
        <mapping class="modelo.entidades.Auditor" />
        <mapping class="modelo.entidades.Organizacion" />
        <mapping class="modelo.entidades.IdOrganizacion" />
        <mapping class="modelo.entidades.Auditoria" />
        <mapping class="modelo.entidades.AuditorAuxiliar" />
        <mapping class="modelo.entidades.IdAuditorAuxiliar" />
        <mapping class="modelo.entidades.ContactoAuditoria" />
        <mapping class="modelo.entidades.IdContactoAuditoria" />
        <mapping class="modelo.entidades.Producto"/>
        <mapping class="modelo.entidades.IdProducto"/>
        <mapping class="modelo.entidades.Norma" />
        <mapping class="modelo.entidades.PlantillaAuditor" />
        <mapping class="modelo.entidades.Proceso" />
        <mapping class="modelo.entidades.Requisito" />
    </session-factory>
</hibernate-configuration>