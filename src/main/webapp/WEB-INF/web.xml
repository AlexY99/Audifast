<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <error-page>
        <error-code>404</error-code>
        <location>/notFound.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>AuditorServlet</servlet-name>
        <servlet-class>controlador.AuditorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuditoriaServlet</servlet-name>
        <servlet-class>controlador.AuditoriaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlantillaServlet</servlet-name>
        <servlet-class>controlador.PlantillaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NormaServlet</servlet-name>
        <servlet-class>controlador.NormaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmpresaServlet</servlet-name>
        <servlet-class>controlador.EmpresaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuditorServlet</servlet-name>
        <url-pattern>/AuditorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuditoriaServlet</servlet-name>
        <url-pattern>/AuditoriaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlantillaServlet</servlet-name>
        <url-pattern>/PlantillaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NormaServlet</servlet-name>
        <url-pattern>/NormaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpresaServlet</servlet-name>
        <url-pattern>/EmpresaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
