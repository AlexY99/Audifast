<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/table_content_cell_bg">

        <TextView
            android:id="@+id/txtNombreContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="María Sánchez"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtPuestoContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="Jefe de Calidad"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtCorreoContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="correoauditor@auxiliar.com.mx "
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtTelefonoContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="5568163492"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>